from hermes import models
from django.http import HttpResponse
from django.utils import simplejson
from extra_utils.extra_shortcuts import render_response

def show_index(request):
    """
    Show index for map page
    """
    return render_response(request, 'index.html', {})
    
def directions(request):

    print 'did we get here'

    if request.method == 'POST':
        lats = request.POST['lats']
        lngs = request.POST['lngs']
    else:
        lats = request.GET['lats']
        lngs = request.GET['lngs']
 
    
    lats = lats.split(',')
    lngs = lngs.split(',')

    lats = ['34','34.1']
    lngs = ['-84.1', '-84.2']

    response = render_response(request, 'directions.html', {'lats':lats, 'lngs':lngs})
    return response

def test(request):
    print 'setting system flags back to True'
    return render_response(request, 'test.html', {})
